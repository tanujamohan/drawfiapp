<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="csci201.han.edward.fi.draw.LoginGUI">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draw.fi"
        android:textSize="80dp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="varela round"
        android:id="@+id/appNameId"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="375dp"
        android:id="@+id/dragonImg"
        android:src="@drawable/dragon_test"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/appNameId"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:shadowRadius="2"
        android:shadowColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dragonImg"
        android:background="@drawable/edittextfield"
        android:id="@+id/username"
        android:layout_marginTop="-40dp"/>
    <EditText
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:shadowRadius="2"
        android:shadowColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/username"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextfield"
        android:id="@+id/password"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password"
        android:layout_marginTop="30dp"
        android:id="@+id/relativeLayout">
        <Button
            android:layout_width="165dp"
            android:layout_height="110dp"
            android:text="Login"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:shadowRadius="25"
            android:shadowColor="@color/white"
            android:fontFamily="varela round"
            android:background="@drawable/mybutton"
            android:layout_marginRight="30dp"
            android:id="@+id/loginBtn"/>
        <Button
            android:layout_width="165dp"
            android:layout_height="110dp"
            android:text="Sandbox"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:shadowRadius="25"
            android:shadowColor="@color/white"
            android:fontFamily="varela round"
            android:background="@drawable/mybutton"
            android:layout_toRightOf="@+id/loginBtn"
            android:id="@+id/sandboxBtn"/>
    </RelativeLayout>

</RelativeLayout>
